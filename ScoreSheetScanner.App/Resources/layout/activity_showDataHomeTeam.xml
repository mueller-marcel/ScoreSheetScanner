<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <Button
        android:text="@string/next_PlayerGuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnToPlayerGuest"
        android:layout_gravity="center_vertical"
        android:backgroundTint="@color/accent_material_light"
        android:textColor="@android:color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnToPlayerGuest">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Player 1 D1 -->
                <TextView
                    android:id="@+id/label_Homeplayer1D1"
                    android:text="@string/homeTeamPlayer1D1"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_Homeplayer1D1"
                    android:layout_below="@id/label_Homeplayer1D1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                 <!-- Player 2 D1 -->
                <TextView
                    android:id="@+id/label_Homeplayer2D1"
                    android:text="@string/homeTeamPlayer2D1"
                    android:layout_below="@id/textEdit_Homeplayer1D1"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_Homeplayer2D1"
                    android:layout_below="@id/label_Homeplayer2D1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Player 1 D2 -->
                <TextView
                    android:id="@+id/label_Homeplayer1D2"
                    android:text="@string/homeTeamPlayer1D2"
                    android:layout_below="@id/textEdit_Homeplayer2D1"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_Homeplayer1D2"
                    android:layout_below="@id/label_Homeplayer1D2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                 <!-- Player 2 D2 -->
                <TextView
                    android:id="@+id/label_Homeplayer2D2"
                    android:text="@string/homeTeamPlayer2D2"
                    android:layout_below="@id/textEdit_Homeplayer1D2"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_Homeplayer2D2"
                    android:layout_below="@id/label_Homeplayer2D2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Player 1 D3 -->
                <TextView
                    android:id="@+id/label_Homeplayer1D3"
                    android:text="@string/homeTeamPlayer1D3"
                    android:layout_below="@id/textEdit_Homeplayer2D2"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_Homeplayer1D3"
                    android:layout_below="@id/label_Homeplayer1D3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Player 2 D3 -->
                <TextView
                    android:id="@+id/label_Homeplayer2D3"
                    android:text="@string/homeTeamPlayer2D3"
                    android:layout_below="@id/textEdit_Homeplayer1D3"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_Homeplayer2D3"
                    android:layout_below="@id/label_Homeplayer2D3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Player E1 -->
                <TextView
                    android:id="@+id/label_HomeplayerE1"
                    android:text="@string/homeTeamPlayerE1"
                    android:layout_below="@id/textEdit_Homeplayer2D3"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_HomeplayerE1"
                    android:layout_below="@id/label_HomeplayerE1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Player E2 -->
                <TextView
                    android:id="@+id/label_HomeplayerE2"
                    android:text="@string/homeTeamPlayerE2"
                    android:layout_below="@id/textEdit_HomeplayerE1"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_HomeplayerE2"
                    android:layout_below="@id/label_HomeplayerE2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Player E3 -->
                <TextView
                    android:id="@+id/label_HomeplayerE3"
                    android:text="@string/homeTeamPlayerE3"
                    android:layout_below="@id/textEdit_HomeplayerE2"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_HomeplayerE3"
                    android:layout_below="@id/label_HomeplayerE3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Player E4 -->
                <TextView
                    android:id="@+id/label_HomeplayerE4"
                    android:text="@string/homeTeamPlayerE4"
                    android:layout_below="@id/textEdit_HomeplayerE3"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_HomeplayerE4"
                    android:layout_below="@id/label_HomeplayerE4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Player E5 -->
                <TextView
                    android:id="@+id/label_HomeplayerE5"
                    android:text="@string/homeTeamPlayerE5"
                    android:layout_below="@id/textEdit_HomeplayerE4"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_HomeplayerE5"
                    android:layout_below="@id/label_HomeplayerE5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Player E6 -->
                <TextView
                    android:id="@+id/label_HomeplayerE6"
                    android:text="@string/homeTeamPlayerE6"
                    android:layout_below="@id/textEdit_HomeplayerE5"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_HomeplayerE6"
                    android:layout_below="@id/label_HomeplayerE6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
