<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <Button
        android:text="@string/next_PlayerHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnToPlayerHome"
        android:layout_gravity="center_vertical"
        android:backgroundTint="@color/accent_material_light"
        android:textColor="@android:color/white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnToPlayerHome">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Home Team -->
                <TextView
                    android:id="@+id/label_homeTeam"
                    android:text="@string/homeTeam"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_homeTeam"
                    android:layout_below="@id/label_homeTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Guest Team -->
                <TextView
                    android:id="@+id/label_guestTeam"
                    android:text="@string/guestTeam"
                    android:layout_below="@id/textEdit_homeTeam"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_guestTeam"
                    android:layout_below="@id/label_guestTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Game Place -->
                <TextView
                    android:id="@+id/label_gamePlace"
                    android:text="@string/gamePlace"
                    android:layout_below="@id/textEdit_guestTeam"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_gamePlace"
                    android:layout_below="@id/label_gamePlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Game Date -->
                <TextView
                    android:id="@+id/label_gameDate"
                    android:text="@string/gameDate"
                    android:layout_below="@id/textEdit_gamePlace"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_gameDate"
                    android:layout_below="@id/label_gameDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Game Start Time -->
                <TextView
                    android:id="@+id/label_gameStartTime"
                    android:text="@string/gameStartTime"
                    android:layout_below="@id/textEdit_gameDate"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_gameStartTime"
                    android:layout_below="@id/label_gameStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Game End Time -->
                <TextView
                    android:id="@+id/label_gameEndTime"
                    android:text="@string/gameEndTime"
                    android:layout_below="@id/textEdit_gameStartTime"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_gameEndTime"
                    android:layout_below="@id/label_gameEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Game Class -->
                <TextView
                    android:id="@+id/label_gameClass"
                    android:text="@string/gameClass"
                    android:layout_below="@id/textEdit_gameEndTime"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_gameClass"
                    android:layout_below="@id/label_gameClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Game Group -->
                <TextView
                    android:id="@+id/label_gameGroup"
                    android:text="@string/gameGroup"
                    android:layout_below="@id/textEdit_gameClass"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_gameGroup"
                    android:layout_below="@id/label_gameGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <!-- Winner -->
                <TextView
                    android:id="@+id/label_gameWinner"
                    android:text="@string/gameWinner"
                    android:layout_below="@id/textEdit_gameGroup"
                    android:paddingTop="45px"
                    android:textSize="38px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/textEdit_gameWinner"
                    android:layout_below="@id/label_gameWinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
